{
  "id": null,
  "title": "ViaIpe Dashboard",
  "tags": ["viaipe", "monitoring"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "timeseries",
      "title": "Disponibilidade Média (%)",
      "datasource": "ViaIpe",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
      "targets": [
        {
          "format": "time_series",
          "rawQuery": true,
          "rawSql": "SELECT timestamp AS time, availability AS value, client AS metric FROM viaipe_metrics ORDER BY timestamp;",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Consumo de Banda Médio (Mbps)",
      "datasource": "ViaIpe",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
      "targets": [
        {
          "format": "time_series",
          "rawQuery": true,
          "rawSql": "SELECT timestamp AS time, avg_bandwidth AS value, client AS metric FROM viaipe_metrics ORDER BY timestamp;",
          "refId": "B"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Qualidade Média",
      "datasource": "ViaIpe",
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
      "targets": [
        {
          "format": "time_series",
          "rawQuery": true,
          "rawSql": "SELECT timestamp AS time, quality AS value, client AS metric FROM viaipe_metrics ORDER BY timestamp;",
          "refId": "C"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Últimos Clientes Monitorados",
      "datasource": "ViaIpe",
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
      "targets": [
        {
          "format": "table",
          "rawQuery": true,
          "rawSql": "SELECT DISTINCT ON (client) client, availability, avg_bandwidth, quality FROM viaipe_metrics ORDER BY client, timestamp DESC;",
          "refId": "D"
        }
      ]
    }
  ]
}
